<% @profilejobs.each do |profilejob| %>
    <p>
        <% if current_user.candidate? %>
            <% if profilejob.profile_id == current_user.id %>
                <%= profilejob.job.title  %> 
                <%= profilejob.job.company.name  %> 
                <%= profilejob.job.end_date  %>
            <% end %>
        <% end %>

        <% if current_user.headhunter? %> 
        <!--Melhorar isso, tá ruim pacas e não funciona -->
        
            <% if profilejob.job.user_id == current_user.id %>
                <%= profilejob.job.title  %>
                <%= profilejob.profile.name  %> 
            <% end %>
        <% end %>

              
    </p>
<% end %>
    
<br>
<p><%= link_to 'Voltar', jobs_path %><p>