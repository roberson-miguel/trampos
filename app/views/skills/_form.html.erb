
<% if @skill.errors.any? %>
 <div class="alert alert-danger" role="alert">
    <% @skill.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  </div>
<% end %>


<%= form_for(skill) do |f| %>
  <p>
    <%= f.label :name, "Nome" %><br>
    <%= f.text_field :name %>
  </p>
  <p>
     <%= f.submit 'Enviar', class:'btn btn-primary' %>
  </p>
<% end %>
