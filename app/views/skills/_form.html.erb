
<% if @skill.errors.any? %>
 <div class="alert alert-danger" role="alert">
    <% @skill.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  </div>
<% end %>


<%= form_for(skill) do |f| %>

    <%= f.label :name, "Nome" %>
    <%= f.text_field :name %><br>
  
     <%= f.submit 'Enviar', class:'btn btn-primary' %>
  
<% end %>
