
<% if @job.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <% @job.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  </div>
<% end %>



<%= form_for(job) do |f| %>
  
       Criado por: <%= f.label :email, current_user.email %>
    <% f.label :user_id, current_user.id %><br>
  
  
  
    <%= f.label :title %>
    <%= f.text_field :title %><br>
  
  
    <%= f.label :description %>
    <%= f.text_field :description %><br>
  
  
    <%= f.label :workplace %>
    <%= f.text_field :workplace %><br>
  
  
    <%= f.label :end_date %> 
    <%= f.text_field :end_date %><br>
  
  
    <%= f.label :salary_range %>
    <%= f.select(:salary_range, Job.salary_ranges.keys.map {|salary| [salary.titleize,salary]}) %><br>
  
  
    <%= f.label :skill_id %>
    <%= f.collection_select(:skill_id, @skills, :id, :name) %><br>
  
   
    <%= f.label :company_id %>
    <%= f.collection_select(:company_id, @companies, :id, :name) %><br>
  
  
    <%= f.label :joblevel_id %>
    <%= f.collection_select(:joblevel_id, @joblevels, :id, :name) %><br>
  
  
    <%= f.label :benefit_id %>
    <%= f.collection_select(:benefit_id, @benefits, :id, :name) %><br>
  
  
    <%= f.label :status %>
    <%= f.select(:status, Job.statuses.keys.map {|status| [status.titleize,status]}) %><br>
  

     <%= f.submit class:'btn btn-primary' %>
  
<% end %>