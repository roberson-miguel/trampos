<div class="jumbotron">
    <% if user_signed_in? %> 
        <p>Vaga</p> 
        Titulo: <%= @job.title %> <br>
        Descrição: <%= @job.description %><br>
        Local de trabalho: <%= @job.workplace %><br>
        Encerra: <%= @job.end_date %><br>
        Faixa salarial: <%= @job.salary_range %><br>
        Habilidades: <%= @job.skill.name %><br>
        Empresa: <%= @job.company.name %><br>
        Nivel Vaga: <%= @job.joblevel.name %><br>
        Beneficio: <%= @job.benefit.name %><br>
        Criado por: <%= current_user.email %><br>
        Status Vaga: <%= @job.status %><br>



        <% if current_user.headhunter? %>
            <%= link_to 'Editar', edit_job_path(@job) %>
            <%= link_to 'Deletar', job_path(@job), method: :delete, data: { confirm: "Confirma exclusão da vaga: #{@job.title}?" } %>
            
        <% end %>

    <% end %>
    
    <%= link_to 'Voltar', jobs_path %>
    <%= link_to 'Aplicar Vaga' , new_job_profilejob_path(@job) %>
    
</div>