<div class="jumbotron">
    <% if user_signed_in? %> 
        <p>Vaga </p>
        <p>Titulo: <%= @job.title %> </p>
        <p>Descrição: <%= @job.description %></p>
        <p>Local de trabalho: <%= @job.workplace %></p>
        <p>Encerra: <%= @job.end_date %></p>
        <p>Faixa salarial: <%= @job.salary_range %></p>
        <p>Habilidades: <%= @job.skill.name %></p>
        <p>Empresa: <%= @job.company.name %></p>
        <p>Nivel Vaga: <%= @job.joblevel.name %></p>
        <p>Beneficio: <%= @job.benefit.name %></p>
        <p>Criado por: <%= current_user.email %>
        <p>Status Vaga: <%= @job.status %></p>



        <% if current_user.headhunter? %>
            <%= link_to 'Editar', edit_job_path(@job) %>
            <%= link_to 'Deletar', job_path(@job), method: :delete, data: { confirm: "Confirma exclusão da vaga: #{@job.title}?" } %>
            
        <% end %>

    <% end %>
    
    <%= link_to 'Voltar', jobs_path %>
    <%= link_to 'Aplicar Vaga' , new_job_profilejob_path(@job) %>
    
</div>