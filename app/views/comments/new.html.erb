<h1> Comentando um Perfil</h1>
<h3>
<%= form_for ([@profile, @comment]) do |f| %>
    <p>
        Nome: <%= f.label current_user.email %><br>
        
    </p>
        <%= f.label :rating, "Estrelas" %><br>
        <%= f.select :rating, Comment::RATING , prompt: "Quantas estrelas"%>
    </p>
    </p>
        <%=f.label :comment, "Comentário" %><br>
        <%= f.text_area :comment, placeholder:"Escreva seu comentário" %>
    </p>
    <p>
        <%= f.submit "Comentar" %>
    </p>
<% end %>
</h3>

